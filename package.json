{
  "name": "voip-softphone",
  "version": "1.0.0",
  "description": "Electron-based SIP softphone for FusionPBX",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "make": "electron-builder"
  },
  "author": "Kosta Theos",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.1.0",
    "sip.js": "^0.20.0"
  },
  "devDependencies": {
    "electron-builder": "^24.3.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  },
  "build": {
    "appId": "com.fasgroup.voipsoftphone",
    "productName": "FASGroup Softphone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
